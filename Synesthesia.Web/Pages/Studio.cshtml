@page
@model Synesthesia.Web.Pages.StudioModel
@{
    ViewData["Title"] = "Fractal Studio";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .btn-syn {
        background: rgba(255,255,255,0.2);
        border: 2px solid rgba(255,255,255,0.4);
        color: white;
        padding: 8px;
        border-radius: 80px;
        transition: 0.3s;
        font-size: 1.1rem;
        text-decoration: none;
    }

    .btn-syn:hover {
        background: rgba(255,255,255,0.4);
        color: #16003B;
        text-decoration: none;
    }

    .btn-syn-success {
        background: rgba(0, 255, 120, 0.25);
        border: 2px solid rgba(0, 255, 120, 0.5);
        color: #eaffea;
        padding: 8px;
        border-radius: 80px;
        transition: 0.3s;
        font-size: 1.1rem;
    }

    .btn-syn-success:hover {
        background: rgba(0, 255, 120, 0.45);
        color: #102b12;
    }

    .btn-syn:disabled,
    .btn-syn-success:disabled {
        opacity: 0.5;
        cursor: not-allowed;
        background: rgba(255,255,255,0.2);
        color: rgba(255,255,255,0.7);
        border-color: rgba(255,255,255,0.4);
    }

    .btn-syn:disabled:hover,
    .btn-syn-success:disabled:hover {
        background: rgba(255,255,255,0.2);
        color: rgba(255,255,255,0.7);
    }

    a {
        color: #ffe;
    }

    a:hover {
        color: #88e5fc;
    }

    .form-floating > label {
        color: lightslategray !important;
    }

    .custom-file-wrapper {
        position: relative;
        display: inline-block;
        width: 100%;
        cursor: pointer;
    }

    .custom-file-input {
        position: absolute;
        left: 0;
        top: 0;
        opacity: 0;
        width: 100%;
        height: 100%;
        cursor: pointer;
        pointer-events: none;
    }

    .custom-file-label {
        background: rgba(255,255,255,0.2);
        border: 2px solid rgba(255,255,255,0.4);
        color: white;
        padding: 8px;
        border-radius: 80px;
        transition: 0.3s;
        font-size: 1.1rem;
        display: inline-block;
        cursor: pointer;
        text-align: center;
        width: 100%;
    }

    .custom-file-label:hover {
        background: rgba(255,255,255,0.4);
        color: #16003B;
    }

    .syn-label {
        color: #e0e0ff;
        font-weight: 500;
        margin-bottom: 8px;
        display: block;
    }

    .alert {
        border-radius: 20px;
        padding: 12px 20px;
        margin-bottom: 15px;
        backdrop-filter: blur(10px);
    }

    .alert-success {
        background: rgba(0, 255, 120, 0.2);
        border: 2px solid rgba(0, 255, 120, 0.4);
        color: #eaffea;
    }

    .alert-danger {
        background: rgba(255, 50, 50, 0.2);
        border: 2px solid rgba(255, 50, 50, 0.4);
        color: #ffeeee;
    }

    .rounded-audio {
        border-radius: 80px;
        overflow: hidden;
    }
</style>

<div class="synesthesia-gradient-top-left">
    <img src="~/images/studio_title_slim.png" alt="Experiment with Fractals Title" style="width: 425px; height: auto;" />

    @* @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="alert @(Model.Message.Contains("successfully") ? "alert-success" : "alert-danger")">
            @Model.Message
        </div>
    } *@

    <form method="post" enctype="multipart/form-data" asp-page-handler="Upload" class="mb-3 mt-3">
        <div style="display: flex; gap: 10px; width: 40vw;">
            <div class="custom-file-wrapper" style="flex: 1;">
                <label class="custom-file-label" id="fileLabel" for="audioInput">Choose Audio File</label>
                <input id="audioInput" type="file" name="audioFile" accept=".mp3,.wav" class="custom-file-input" required>
            </div>

            <button id="uploadBtn" class="btn-syn" type="submit" style="flex: 1;" disabled>
                Upload
            </button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model.AudioPath))
    {
        <div class="mb-3" style="display: flex; align-items: center; gap: 15px; flex-wrap: wrap;">
            <audio id="audio" src="@Model.AudioPath" controls crossorigin="anonymous" class="rounded-audio"></audio>

            <select id="fractalType" style="border-radius: 15px; padding: 8px 12px;">
                <option value="julia" selected>Julia 2D</option>
                <option value="mandelbrot">Mandelbrot 2D</option>
                <option value="mandelbulb">Mandelbulb 3D</option>
            </select>

            @if (User.Identity?.IsAuthenticated == true && !Model.IsCurrentAudioSaved)
            {
                <form method="post" asp-page-handler="SaveToProfile">
                    <input type="hidden" name="audioPath" value="@Model.AudioPath" />
                    <input type="hidden" name="originalFileName" value="@Model.UploadedOriginalFileName" />
                    <button type="submit" class="btn-syn-success">
                        Save to Profile
                    </button>
                </form>
            }
            else if (User.Identity?.IsAuthenticated == true && Model.IsCurrentAudioSaved)
            {
                <span class="btn-syn-success" style="cursor: default;">
                    ✓ Saved to Profile
                </span>
            }
            else if (User.Identity?.IsAuthenticated == false)
            {
                <a class="btn-syn" asp-area="Identity" asp-page="/Account/Login">
                    Login to Save
                </a>
            }
        </div>

        <div id="mandelbrot-desc" style="width: 90%; max-width: 800px; margin: 20px auto; color: #e0e0ff; font-family: monospace;">
            <details style="background: rgba(0,0,0,0.4); border-radius: 20px; padding: 15px; backdrop-filter: blur(10px);">
                <summary style="cursor: pointer; font-weight: bold; font-size: 1.2rem;">Mandelbrot Fractal Technical Description</summary>
                <div style="margin-top: 10px; line-height: 1.6;">
                    <p><strong>Formula:</strong></p>
                    <pre>zₙ₊₁ = zₙ² + c</pre>
                    <p>Here, <code>z</code> and <code>c</code> are complex numbers. Iteratively apply the formula until |z| &gt; 2 or the maximum number of iterations is reached.</p>

                    <p><strong>How it works:</strong></p>
                    <ul>
                        <li>Each pixel corresponds to a complex number <code>c</code>.</li>
                        <li>We iterate <code>z = z² + c</code> up to <code>maxIter</code> times.</li>
                        <li>The number of iterations before escape is normalized to determine the color.</li>
                        <li>Colors are blended using a soft rainbow gradient with a pink core.</li>
                        <li>Vignette and gamma correction are applied for aesthetic smoothing.</li>
                    </ul>

                    <p><strong>Audio-driven parameters:</strong></p>
                    <table style="width: 100%; border-collapse: collapse;">
                        <tr>
                            <th style="text-align:left; padding:4px;">Parameter</th>
                            <th style="text-align:left; padding:4px;">Effect</th>
                        </tr>
                        <tr>
                            <td><code>bassLevel</code></td>
                            <td>Controls max iterations: high bass → fewer iterations (blobby), low bass → sharper fractal.</td>
                        </tr>
                        <tr>
                            <td><code>pulse</code></td>
                            <td>Overall brightness multiplier.</td>
                        </tr>
                        <tr>
                            <td><code>iTime</code></td>
                            <td>Animates subtle color changes over time.</td>
                        </tr>
                    </table>
                </div>
            </details>
        </div>

        <div id="julia-desc" class="fractal-desc" style="width: 90%; max-width: 800px; margin: 20px auto; color: #e0e0ff; font-family: monospace; display: none;">
            <details style="background: rgba(0,0,0,0.4); border-radius: 20px; padding: 15px; backdrop-filter: blur(10px);">
                <summary style="cursor: pointer; font-weight: bold; font-size: 1.2rem;">Julia Fractal Technical Description</summary>
                <div style="margin-top: 10px; line-height: 1.6;">
                    <p><strong>Formula:</strong></p>
                    <pre>zₙ₊₁ = zₙ² + c(t)</pre>
                    <p>Here, <code>z</code> is a complex number and <code>c</code> is an animated complex constant. Iteratively apply until |z| &gt; 2 or max iterations reached.</p>
                    <p><strong>How it works:</strong></p>
                    <ul>
                        <li>The constant <code>c</code> is animated over time and influenced by bass and treble.</li>
                        <li>Each pixel corresponds to a starting value of <code>z</code>.</li>
                        <li>Colors are calculated based on iteration count and a rainbow gradient.</li>
                    </ul>
                    <p><strong>Audio-driven parameters:</strong></p>
                    <ul>
                        <li><code>bassLevel</code>: Subtle wobble of the fractal shape.</li>
                        <li><code>trebleLevel</code>: Shimmers in color and small movement in <code>c</code>.</li>
                        <li><code>pulse</code>: Brightness multiplier.</li>
                        <li><code>iTime</code>: Drives smooth animation of fractal and colors.</li>
                    </ul>
                </div>
            </details>
        </div>

        <div id="mandelbulb-desc" class="fractal-desc" style="width: 90%; max-width: 800px; margin: 20px auto; color: #e0e0ff; font-family: monospace; display: none;">
            <details style="background: rgba(0,0,0,0.4); border-radius: 20px; padding: 15px; backdrop-filter: blur(10px);">
                <summary style="cursor: pointer; font-weight: bold; font-size: 1.2rem;">Mandelbulb 3D Fractal Technical Description</summary>
                <div style="margin-top: 10px; line-height: 1.6;">
                    <p><strong>Distance Estimation Formula:</strong></p>
                    <pre>
                    r = length(z)
                    z = r^(power-1) * (sin(th*power)*cos(ph*power),
                                       sin(th*power)*sin(ph*power),
                                       cos(th*power)) + c
                    DE = 0.5 * log(r) * r / dr
                     </pre>
                    <p>Used in ray marching to render the 3D Mandelbulb.</p>
                    <p><strong>How it works:</strong></p>
                    <ul>
                        <li>Each ray marches through space using the distance estimator (<code>mandelbulbDE</code>).</li>
                        <li>Normals are estimated using small offsets, then shaded using a simple lighting model.</li>
                        <li>Colors are animated with sin/cos waves and audio influences.</li>
                    </ul>
                    <p><strong>Audio-driven parameters:</strong></p>
                    <ul>
                        <li><code>bassLevel</code>: Influences fractal power and small rotations.</li>
                        <li><code>trebleLevel</code>: Small rotation speed and color shimmer.</li>
                        <li><code>iBoom</code>: Impacts power and scale.</li>
                        <li><code>pulse</code>: Brightness multiplier.</li>
                        <li><code>rotation</code>: Additional rotation control.</li>
                    </ul>
                </div>
            </details>
        </div>

        <div id="fractal-container" style="width:100%; height:100vh; background:#000; border-radius: 80px; overflow:hidden;"></div>
    }
</div>

@section Scripts {
    <script src="~/lib/three/three.min.js"></script>
    <script src="~/js/fractal-studio.js"></script>

    <script>
        const fileInput = document.getElementById('audioInput');
        const fileLabel = document.getElementById('fileLabel');
        const uploadBtn = document.getElementById('uploadBtn');

        uploadBtn.disabled = true;
        uploadBtn.style.opacity = 0.5;

        fileInput.addEventListener('change', (e) => {
            const fileName = e.target.files[0]?.name || "Choose Audio File";
            fileLabel.textContent = fileName;

            if (fileName !== "Choose Audio File") {
                uploadBtn.disabled = false;
                uploadBtn.style.opacity = 1;
            } else {
                uploadBtn.disabled = true;
                uploadBtn.style.opacity = 0.5;
            }
        });
    </script>

    <script>
        const fractalSelect = document.getElementById('fractalType');
        const fractalDescs = {
            'mandelbrot': document.getElementById('mandelbrot-desc'),
            'julia': document.getElementById('julia-desc'),
            'mandelbulb': document.getElementById('mandelbulb-desc')
        };

        function updateFractalDescription() {
            const value = fractalSelect.value;
            // Hide all first
            Object.values(fractalDescs).forEach(div => div.style.display = 'none');
            // Show selected
            if (fractalDescs[value]) fractalDescs[value].style.display = 'block';
        }

        // Initial check
        updateFractalDescription();

        // Update on change
        fractalSelect.addEventListener('change', updateFractalDescription);
    </script>

    <script>
        const audio = document.getElementById('audio');
        audio.volume = 0.3;
    </script>
}