@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<style>
    html, body {
        height: 100%; /* full viewport height */
        margin: 0;
        padding: 0;
    }

    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    main {
        flex: 1; /* take remaining space between header and footer */
        display: flex;
        flex-direction: column;
    }

    .hero {
        flex: 1; /* fills main */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        color: white;
        text-shadow: 0 0 15px rgba(0,0,0,0.8);
        background: linear-gradient(120deg, #16003B, #713ABE, #FF7F3F, yellow);
        background-size: 300% 300%;
        animation: gradientMove 15s ease infinite;
        text-align: center;
    }

    @@keyframes gradientMove {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .btn-fractal {
        font-size: 1.4rem;
        padding: 14px 40px;
        border-radius: 50px;
        background: rgba(255,255,255,0.2);
        border: 2px solid rgba(255,255,255,0.4);
        color: white;
        backdrop-filter: blur(8px);
        transition: 0.3s;
        margin-top: 20px;
    }

    .btn-fractal:hover {
        background: rgba(255,255,255,0.4);
        color: #16003B;
    }

    .footer-text {
        text-align: center;
        padding: 10px 0;
        color: white;
        text-shadow: 0 0 5px rgba(0,0,0,0.7);
    }
</style>

<div class="hero">
    <h1 class="display-3 fw-bold">Synesthesia</h1>
    <p class="lead">
        Transform your music into beautiful living fractals.
    </p>

    <a class="btn btn-fractal" asp-page="/ImportAudio">
        Experiment with Fractals
    </a>
</div>
